<div class="columns">
    <div class="column is-narrow has-text-centered">
        <div class="box">
            <img src="/renders/avatars/{{req.session.id}}.png" onerror="this.onerror = null; this.src = '/renders/error.png'" alt="{{req.session.name}}">
        </div>
    </div>
    <div class="column is-7">
        <div class="box">
            <div class="tabs">
                <ul>
                    <li class="is-active"><a>All</a></li>
                    <li><a>Hats</a></li>
                    <li><a>Gear</a></li>
                    <li><a>Heads</a></li>
                    <li><a>Faces</a></li>
                    <li><a>Shirts</a></li>
                    <li><a>Pants</a></li>
                    <li><a>T-Shirts</a></li>
                    <li><a>Colors</a></li>
                </ul>
            </div>
            <div id="content">
                <div class="columns is-multiline is-3">
                    {{#repeat 6}}
                    <div class="column is-one-fifth">
                        <a href="/catalog/view?id=69">
                            <div class="box">
                            <img src="/asset?id=69" width="150" height="150" onerror="this.onerror = null; this.src = '/renders/error.png'" alt="Item Image">
                            <h5 class="truncate" style="width: 150px; font-size: 17px;">this.name</h5>
                            <p class="truncate text-muted" style="width:150px; font-size: 10px;">By <b>this.creatorName</b></p>
                            <b>$69</b>
                            </div>
                        </a>
                    </div>
                    {{/repeat}}
                </div>
            </div>
            <div id="loader" style="display: none">
                The contents are loading...
            </div>
        </div>
    </div>
</div>