<h1>New Item</h1>
{{~#if error}}
<div role="alert" class="alert alert-danger">{{error}}</div>
{{~/if}}

<form method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" name="name">
  </div>
  <div class="form-group">
    <label for="name">Description</label>
    <textarea class="form-control" name="description">No description</textarea>
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input class="form-control" name="price" value="10" min="10" max="2147483647">
  </div>
  <div class="form-group">
    <label for="file">File</label>
    <input class="form-control" name="file" type="file">
  </div>
  <div class="form-group">
    <label for="type">Type</label>
    <select class="form-control" name="type">
      <option value="shirt">Shirt</option>
      <option value="pants">Pants</option>
      <option value="tshirt">T-Shirt</option>
      <option value="decal">Decal</option>
      <option value="audio">Audio</option>
      <option value="model">Model</option>
      <option value="debug">Validation Test</option>
      <option value="face">Validation Test 2</option>
	  </select>
  </div>
  <div class="form-group">
    <input type="checkbox" name="offsale">
    <label for="offsale">Off-sale</label>
  </div>
  <div class="form-group">
    {{{captcha}}}
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
